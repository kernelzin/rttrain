= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
%head
%body
  %br
  .row
    .col-md-8
      %p Threshold
      .row
        .col-md-8
          %input{:id => "threshold", :type => "range", :min => "0", :max => "255", :value => "0"}
        .col-md-2
          %input{:id => "threshold_val", :type => "number",  :min => "0", :max => "255", :value => "0" }
        .col-md-2
          %button{:id => "threshold_btn" } Threshold the image
      = image_tag  @box.picture.data.jpg,  id: "note_photo" , width: "100%", hidden: true
      %canvas{:id => "canvas" }


    .col-md-4
      %h1 Box

      %table.table.table-striped.align-middle
        %thead
          %tr
            %th char
            %th x1
            %th y1
            %th x2
            %th y2
        %tbody
          - for char in @box.chars
            %tr
              %td
                %h6= char.char.to_s
              %td
                %h6= char.x1
              %td
                %h6= char.y1
              %td
                %h6= char.x2
              %td
                %h6= char.y2
