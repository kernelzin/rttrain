= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true
%head
%body
  .row
    .col-md-8
      = image_tag  @box.picture.data.jpg,  id: "note_photo"
      %canvas{:id => "threshold"}
      %button{:onclick => "threshold()"} Threshold the image
    .col-md-4
      %h1 Box

      %table.table.table-striped.align-middle
        %thead
          %tr
            %th char
            %th x1
            %th y1
            %th x2
            %th y2
        %tbody
          - for char in @box.chars
            %tr
              %td
                %h6= char.char.to_s
              %td
                %h6= char.x1
              %td
                %h6= char.y1
              %td
                %h6= char.x2
              %td
                %h6= char.y2
